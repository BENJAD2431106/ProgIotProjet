@page "/donnees"
@using OnyraProjet.Models
@using OnyraProjet.Services
@using OnyraProjet.Authentication
@using Microsoft.AspNetCore.Components.Authorization

@inject DonneeService donneeService
@inject CustomAuthentificationStateProvider authProvider

<PageTitle>Données</PageTitle>

<h3 class="text-center mb-4">Données</h3>

@if (donnee == null)
{
    <p>Chargement des données...</p>
}
else if (!donnee.Any())
{
    <p>Aucune donnée disponible.</p>
}
else
{
    @if (donnee == null)
    {
        <p>Chargement des données...</p>
    }
    else if (!donnee.Any())
    {
        <p>Aucune donnée disponible.</p>
    }
    else
    {
        <div class="table-responsive mb-4">
            <table class="table table-bordered table-hover align-middle text-center" style="background-color: white;">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Valeur Lumière</th>
                        <th>Valeur Son</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donneesCapteurs in donnee)
                    {
                        <tr>
                            <td>@donneesCapteurs.DateHeure.ToString("d")</td>
                            <td>@donneesCapteurs.DateHeure.ToString("t")</td>
                            <td>
                                @if (donneesCapteurs.ValLumiere > 200)
                                {
                                    <span class="badge bg-danger">@donneesCapteurs.ValLumiere</span>
                                }
                                else
                                {
                                    <span>@donneesCapteurs.ValLumiere</span>
                                }
                            </td>
                            <td>
                                @if (donneesCapteurs.ValSon > 300)
                                {
                                    <span class="badge bg-danger">@donneesCapteurs.ValSon</span>
                                }
                                else
                                {
                                    <span>@donneesCapteurs.ValSon</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Messages centrés sous le tableau -->
        <div class="d-flex justify-content-center mt-4">
            <div class="w-50">
                @{
                    var lumiereMax = donnee.Max(d => d.ValLumiere);
                    var sonMax = donnee.Max(d => d.ValSon);
                }

                @if (lumiereMax > 200)
                {
                    <div class="card border-danger shadow-sm mb-3">
                        <div class="card-body text-center">
                            <h5 class="card-title text-danger mb-1">⚠ Lumière très élevée !</h5>
                            <p class="card-text">La valeur maximale atteinte est : <strong>@lumiereMax</strong></p>
                        </div>
                    </div>
                }

                @if (sonMax > 300)
                {
                    <div class="card border-danger shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title text-danger mb-1">⚠ Son très élevé !</h5>
                            <p class="card-text">La valeur maximale atteinte est : <strong>@sonMax</strong></p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}

@code {
    private List<OnyraProjet.Models.Donnee> donnee = new List<Donnee>();

    protected override async Task OnInitializedAsync()
    {
        var authState = await authProvider.GetAuthenticationStateAsync(); /* aller chercher si l'utilisateur est connecter */
        var userIdClaim = authState.User.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier); /* DEF DE CETTE LIGNE : Trouve moi le claim qui contient l’ID de l'utilisateur. */
        int noUtilisateur = int.Parse(userIdClaim.Value);

        // Récupérer uniquement les données de cet utilisateur
        donnee = await donneeService.GetDonneesByUtilisateurAsync(noUtilisateur);
    }
}
