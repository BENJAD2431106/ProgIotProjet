@page "/donnees"
@using OnyraProjet.Models
@using OnyraProjet.Services
@using OnyraProjet.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@using System.Globalization

@inject DonneeService donneeService
@inject CustomAuthentificationStateProvider authProvider

<PageTitle>Données</PageTitle>

<h3 class="text-center mb-4">Données</h3>

@if (donnee == null)
{
    <p>Chargement des données...</p>
}
else if (!donnee.Any())
{
    <p>Aucune donnée disponible.</p>
}
else
{
    <!-- Liste déroulante des dates -->
    <div class="mb-4">
        <label class="form-label"><strong>Choisir une date :</strong></label>
        <select class="form-select w-25"
                @onchange="FiltrerParDate">
            @foreach (var date in datesDisponibles)
            {
                var value = date.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture);
                <option value="@value" selected="@(value == dateSelectionneeStr)">
                    @date.ToString("dd/MM/yyyy")
                </option>
            }
        </select>
    </div>

    @if (donneeFiltrees == null || !donneeFiltrees.Any())
    {
        <p>Aucune donnée pour cette date.</p>
    }
    else
    {
        <div class="table-responsive mb-4">
            <table class="table table-bordered table-hover align-middle text-center" style="background-color: white;">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Valeur Lumière</th>
                        <th>Valeur Son</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donneesCapteurs in donneeFiltrees)
                    {
                        <tr>
                            <td>@donneesCapteurs.DateHeure.ToString("d")</td>
                            <td>@donneesCapteurs.DateHeure.ToString("t")</td>
                            <td>
                                @if (donneesCapteurs.ValLumiere > 200)
                                {
                                    <span class="badge bg-danger">@donneesCapteurs.ValLumiere</span>
                                }
                                else
                                {
                                    <span>@donneesCapteurs.ValLumiere</span>
                                }
                            </td>
                            <td>
                                @if (donneesCapteurs.ValSon > 300)
                                {
                                    <span class="badge bg-danger">@donneesCapteurs.ValSon</span>
                                }
                                else
                                {
                                    <span>@donneesCapteurs.ValSon</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Messages centrés sous le tableau -->
        <div class="d-flex justify-content-center mt-4">
            <div class="w-50">
                @{
                    // Max sur TOUTES les données (comme avant).
                    // Si tu veux seulement la date sélectionnée, remplace "donnee" par "donneeFiltrees".
                    var lumiereMax = donnee.Max(d => d.ValLumiere);
                    var sonMax = donnee.Max(d => d.ValSon);
                }

                @if (lumiereMax > 200)
                {
                    <div class="card border-danger shadow-sm mb-3">
                        <div class="card-body text-center">
                            <h5 class="card-title text-danger mb-1">⚠ Lumière très élevée !</h5>
                            <p class="card-text">La valeur maximale atteinte est : <strong>@lumiereMax</strong></p>
                        </div>
                    </div>
                }

                @if (sonMax > 300)
                {
                    <div class="card border-danger shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title text-danger mb-1">⚠ Son très élevé !</h5>
                            <p class="card-text">La valeur maximale atteinte est : <strong>@sonMax</strong></p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}

@code {
    // Toutes les données de l'utilisateur
    private List<Donnee>? donnee;

    // Données filtrées pour la date sélectionnée
    private List<Donnee> donneeFiltrees = new();

    // Liste des dates uniques disponibles
    private List<DateOnly> datesDisponibles = new();

    // Valeur sélectionnée dans le <select> (format yyyy-MM-dd)
    private string? dateSelectionneeStr;

    protected override async Task OnInitializedAsync()
    {
        var authState = await authProvider.GetAuthenticationStateAsync(); /* aller chercher si l'utilisateur est connecter */
        var userIdClaim = authState.User.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier); /* Trouve le claim qui contient l’ID de l'utilisateur. */
        int noUtilisateur = int.Parse(userIdClaim.Value);

        // Récupérer uniquement les données de cet utilisateur
        donnee = await donneeService.GetDonneesByUtilisateurAsync(noUtilisateur);

        if (donnee.Any())
        {
            // Extraire les dates uniques (partie jour seulement)
            datesDisponibles = donnee
                .Select(d => DateOnly.FromDateTime(d.DateHeure))
                .Distinct()
                .OrderByDescending(d => d)   // La date la plus récente en premier
                .ToList();

            // Sélection par défaut : la plus récente
            var dateDefaut = datesDisponibles.First();
            dateSelectionneeStr = dateDefaut.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture);

            AppliquerFiltre();
        }
    }

    private void FiltrerParDate(ChangeEventArgs e)
    {
        dateSelectionneeStr = e.Value?.ToString();
        AppliquerFiltre();
    }

    private void AppliquerFiltre()
    {
        if (donnee == null || !donnee.Any() || string.IsNullOrWhiteSpace(dateSelectionneeStr))
        {
            donneeFiltrees = new List<Donnee>();
            return;
        }

        if (!DateOnly.TryParseExact(
                dateSelectionneeStr,
                "yyyy-MM-dd",
                CultureInfo.InvariantCulture,
                DateTimeStyles.None,
                out var dateSelectionnee))
        {
            donneeFiltrees = new List<Donnee>();
            return;
        }

        donneeFiltrees = donnee
            .Where(d => DateOnly.FromDateTime(d.DateHeure) == dateSelectionnee)
            .OrderByDescending(d => d.DateHeure)
            .ToList();
    }
}
