@page "/donnees"
@using OnyraProjet.Models
@using OnyraProjet.Services
@using OnyraProjet.Authentication
@using Microsoft.AspNetCore.Components.Authorization

@inject DonneeService donneeService
@inject CustomAuthentificationStateProvider authProvider

<PageTitle>Données</PageTitle>

<h3>Données</h3>

@if (donnee == null)
{
    <p>Chargement des données...</p>
}
else if (!donnee.Any())
{
    <p>Aucune donnée disponible.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Heure</th>
                    <th scope="col">Valeur Lumière</th>
                    <th scope="col">Valeur Son</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in donnee)
                {
                    <tr>
                        <td>@d.DateHeure.ToString("d")</td>
                        <td>@d.DateHeure.ToString("t")</td>
                        <td>@d.ValLumiere</td>
                        <td>@d.ValSon</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<OnyraProjet.Models.Donnee> donnee;


    protected override async Task OnInitializedAsync()
    {
        var authState = await authProvider.GetAuthenticationStateAsync();
        var userIdClaim = authState.User.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier);
        int noUtilisateur = int.Parse(userIdClaim.Value);

        // Récupérer uniquement les données de cet utilisateur
        donnee = await donneeService.GetDonneesByUtilisateurAsync(noUtilisateur);
    }
}
