@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@* @rendermode InteractiveServer *@
<PageTitle>Home</PageTitle>
<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Identity.Name!</h1>

        Welcome to your new app.
    </Authorized>
    <NotAuthorized>
        <h1>Hello, Guest!</h1>

        Welcome to your new app.
    </NotAuthorized>
</AuthorizeView>

